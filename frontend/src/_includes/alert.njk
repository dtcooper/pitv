<div class="toast toast-top toast-center items-center z-[9999]" x-data x-show="$store.alert.alerts.length > 0">
  <template x-for="alert in [...$store.alert.alerts].reverse()" :key="alert.id">
    <div
      class="alert w-max max-w-screen-md"
      :class="{
          'alert-info': alert.level === 'info',
          'alert-success': alert.level === 'success',
          'alert-warning': alert.level === 'warning',
          'alert-error': alert.level === 'error'
      }"
    >
      <div>
        <span
          class="iconify h-8 w-8"
          :data-icon="$store.alert.icon(alert.level)"
        ></span>
        <span class="italic" x-text="alert.message"></span>
      </div>
    </div>
  </template>
</div>
