<header class="flex justify-center items-center gap-x-1.5 md:gap-x-3 mt-2 text-primary">
  {% set icons = ['fa6-brands:raspberry-pi', 'mdi:audio-video'] %}
  {% for icon in icons %}
    <span class="iconify h-6 w-6 md:h-12 md:w-12" data-icon="{{ icon }}"></span>
  {% endfor %}
  <h1 class="text-center font-bold text-base md:text-3xl">
    {{ TITLE }}
  </h1>
  {% for icon in icons | reverse %}
    <span class="iconify h-6 w-6 md:h-12 md:w-12" data-icon="{{ icon }}" data-flip="horizontal"></span>
  {% endfor %}
</header>

<div>
  {% include "status_bar.njk" %}
</div>

<div class="flex-1 flex flex-col overflow-y-auto">
  {% include "playlist.njk" %}
</div>
