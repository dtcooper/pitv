<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
  <title>{{ TITLE }}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;700&amp;family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&amp;display=swap" rel="stylesheet">
  <link href="{{ static("styles.css") }}" rel="stylesheet">
  <script src="{{ static("script.js") }}" defer></script>
  <script>
    const DATA = {
      DEBUG: {{ DEBUG|scriptjson }},
      DOMAIN_NAME: {{ DOMAIN_NAME|scriptjson }},
      WEBSOCKET_URL_DEV_OVERRIDE: {{ WEBSOCKET_URL_DEV_OVERRIDE|default(null)|scriptjson }}
    }
  </script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/iconify/{{ ICONIFY_VERSION }}/iconify.min.js"></script>
</head>
<body>
  <main x-data x-title="connect" x-show="!$store.conn.connected">
    {% include "connect.njk" %}
  </main>

  <div x-data class="space-y-1 mt-1 md:space-y-3 md:mt-2" x-title="app" x-show="$store.conn.connected" x-cloak>
    <header>
      <h1 class="text-center font-bold italic text-lg drop-shadow-lg md:text-5xl text-primary">
        {{ TITLE }}
      </h1>
    </header>
    <main>
      {% include "app.njk" %}
    </main>
  </div>
</body>
</html>
